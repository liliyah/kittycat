<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cats"
    android:padding="30dp"
    tools:context=".CaringCatFragment">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب تسريح شعر القطه و قص الاظافر بانتظام"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب تغيير المياة التى تشرب منها القطه يوميا"
            android:textColor="@color/darkred"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب ان يكون لكل قطه صندوق الفضلات الخاص بها و يجب تنظيفه باستمرار"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب ان تذهب القطه للطبيب البيطرى لو تبولت خارج صندوق الفضلات لانه يعنى التهاب بمجرى البول"
            android:textColor="@color/darkred"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب ان توفر مكان للقطه لتقوم فيه بالخدش او الخربشه بعيدا عن الاثاث "
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب ان نقوم بتنظيف اسنان القطه عند الطبيب البيطرى كل شهر "
            android:textColor="@color/darkred"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * يجب الذهاب للطبيب البيطرى سنويا و القطط الصغيرة من عمر 8 اسابيع لتلقى التطعيمات "
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=" * بخاخ فرمون القطط يساعد على تهدئه سلوكهم "
            android:textColor="@color/darkred"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="200dp"
            android:src="@drawable/catsssvaccinations"/>
    </LinearLayout>
</RelativeLayout>
</androidx.core.widget.NestedScrollView>
</RelativeLayout>